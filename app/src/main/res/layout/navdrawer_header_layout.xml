<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/navDrawerHearLayout"
    >

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:src="@drawable/img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textView"

        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/app_name"
        android:textColor="#FFF"
        app:layout_constraintBottom_toTopOf="@+id/et_searchNews"
        app:layout_constraintLeft_toRightOf="@+id/iv_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.471" />

    <EditText
        android:id="@+id/et_searchNews"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:background="@drawable/bground"
        android:gravity="center"
        android:hint="Search for news with keyword. \n eg. Tesla  "
        android:maxLines="2"
        android:minHeight="48dp"
        android:padding="13dp"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_search"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_search"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:backgroundTint="@color/purple_500"
        app:icon="@drawable/ic_search"
        app:layout_constraintBottom_toBottomOf="@+id/et_searchNews"
        app:layout_constraintLeft_toRightOf="@+id/et_searchNews"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_searchNews"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_tesla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#tesla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chip_bbcNews"
        app:layout_constraintTop_toBottomOf="@+id/chip_microsoft" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_microsoft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#microsoft"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chip_elonmusk"
        app:layout_constraintTop_toBottomOf="@+id/et_searchNews" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_elonmusk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#elonmusk"
        app:layout_constraintEnd_toStartOf="@+id/chip_microsoft"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_searchNews" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_bbcNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#BBC news"
        app:layout_constraintEnd_toStartOf="@+id/chip_tesla"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chip_elonmusk" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_bitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#bitcoin"
        app:layout_constraintEnd_toStartOf="@+id/chip_India"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chip_bbcNews" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_India"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#India"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chip_bitcoin"
        app:layout_constraintTop_toBottomOf="@+id/chip_tesla" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_Techcrunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#techcrunch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chip_TOI"
        app:layout_constraintTop_toBottomOf="@+id/chip_India" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_TOI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#TimesOfIndia"
        app:layout_constraintEnd_toStartOf="@+id/chip_Techcrunch"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chip_bitcoin" />


</androidx.constraintlayout.widget.ConstraintLayout>